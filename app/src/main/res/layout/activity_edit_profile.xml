<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.main.profile.EditProfileActivity">

    <include layout="@layout/toolbar_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_view_height_normal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/corner_field"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="@dimen/ic_size_small"
                android:layout_height="@dimen/ic_size_small"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/tf_location"/>

            <AutoCompleteTextView
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_address"
                android:hint="@string/address"
                android:textCursorDrawable="@color/colorBlue"
                android:textColorHint="@color/colorLightGray"
                android:textSize="@dimen/text_title"
                android:textColor="@color/colorGray"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:singleLine="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_structure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_view_height_normal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/corner_field"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/sp_structure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_title"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="15dp" />

            <ImageView
                android:id="@+id/iv_structure"
                android:layout_width="@dimen/ic_size_small"
                android:layout_height="@dimen/ic_size_small"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/tf_job"/>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>