<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    tools:context=".view.activity.main.market.ProposalDetailActivity">

    <include layout="@layout/toolbar_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_high" />

                <LinearLayout
                    android:id="@+id/ll_customer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_row_height"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/ic_size_small"
                        android:layout_height="@dimen/ic_size_small"
                        android:src="@drawable/tf_user_b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/customer_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:textSize="@dimen/text_normal"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_row_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/ic_size_small"
                        android:layout_height="@dimen/ic_size_small"
                        android:src="@drawable/tf_location_b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_normal"/>


                <LinearLayout
                    android:id="@+id/ll_scheduled_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_row_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/ic_size_small"
                        android:layout_height="@dimen/ic_size_small"
                        android:src="@drawable/tf_date_b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/scheduled_date"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_scheduled_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:textSize="@dimen/text_normal"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_row_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/ic_size_small"
                        android:layout_height="@dimen/ic_size_small"
                        android:src="@drawable/tf_dollar_b"/>

                    <TextView
                        android:id="@+id/tv_value_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/quotation_value"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:textSize="@dimen/text_normal"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_row_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/ic_size_small"
                        android:layout_height="@dimen/ic_size_small"
                        android:src="@drawable/tf_business_name_b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/description"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_normal"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>